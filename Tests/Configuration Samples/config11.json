{
	// The 2 configurations for the first client have different TLS configurations, so the first enabled configuration will be loaded, the rest, discarded.
	"databases": [
		{
			"name": "db1",
			"type": "SQLite"
			// For help creating connection strings visit: https://www.connectionstrings.com/
		}
	],
	"brokers": [
		{
			"host": "localhost",
			"port": 1883,
			"user": "user1",
			"password": "password1",
			"subscriptions": [
				{
					"topic": "some/topic/1",
					"qos": 2,
					"base": "db1",
					"table": "table1"
				}
			]
		},
		{
			"host": "localhost",
			"port": 1883,
			"user": "user1",
			"password": "password1",
			"tls": {
				"enabled": true,
				"protocol": "auto"
			},
			"subscriptions": [
				{
					"topic": "some/topic/1",
					"qos": 2,
					"base": "db1",
					"table": "table1"
				}
			]
		},
		{
			"host": "localhost",
			"port": 1883,
			"user": "user2",
			"password": "password2",
			"tls": {
				"enabled": true,
				"protocol": "tlsv1.2",
				"clientCert": "certs/client_no_pass.pfx",
				"allowUntrustedCertificates": true
			},
			"subscriptions": [
				{
					"topic": "some/topic/2",
					"qos": 1,
					"base": "db1",
					"table": "table2"
				}
			]
		},
		{
			"host": "localhost",
			"port": 1883,
			"user": "user3",
			"password": "password3",
			"tls": {
				"enabled": true,
				"version": "1.3",
				"caCert": "certs/self_signed_ca.crt",
				"selfSignedCa": true,
				"clientCert": "certs/client.pfx",
				"clientCertPass": "client_pass"
			},
			"subscriptions": [
				{
					"topic": "some/topic/2",
					"qos": 1,
					"base": "db1",
					"table": "table2"
				}
			]
		}
	]
}